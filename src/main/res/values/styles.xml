<resources>

    <!-- Base application theme. -->
    <style name="AppBasTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:colorBackground">@color/surface_color</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorOnBackground">@color/colorAccent</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="textInputStyle">@style/AppTheme.TextInputLayout</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>
        <item name="switchPreferenceCompatStyle">@style/SwitchPreference</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Surface</item>
        <item name="fontFamily">@font/fira_sans_regular</item>
    </style>


    <style name="AppTheme" parent="AppBasTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.MaterialComponents.ActionBar.Surface">
        <item name="homeAsUpIndicator">@drawable/ic_ab_back</item>
    </style>

    <style name="SwitchPreference" parent="Preference.SwitchPreferenceCompat.Material" />

    <style name="SignInTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/gradient_color_2</item>
        <item name="textInputStyle">@style/AppTheme.TextInputLayout</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ChatIcons">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:tint">@color/icon_tint_color</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.MaterialComponents" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ImageCrop" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ImageViewer" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ImagePickerTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">#FAFAFA</item>
        <item name="colorPrimaryDark">#FAFAFA</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="toolbar">@style/ThemeOverlay.AppCompat.DayNight.ActionBar</item>-->
        <item name="album.dropdown.title.color">?android:textColorPrimary</item>
        <item name="album.dropdown.count.color">@color/zhihu_album_dropdown_count_text</item>
        <item name="album.element.color">@android:color/black</item>
        <item name="album.thumbnail.placeholder">@color/zhihu_album_dropdown_thumbnail_placeholder
        </item>
        <item name="album.emptyView">@drawable/ic_empty_zhihu</item>
        <item name="album.emptyView.textColor">@color/zhihu_album_empty_view</item>
        <item name="item.placeholder">@color/zhihu_item_placeholder</item>
        <item name="item.checkCircle.backgroundColor">#03A9F4</item>
        <item name="item.checkCircle.borderColor">@color/zhihu_item_checkCircle_borderColor</item>
        <item name="page.bg">@color/surface_color</item>
        <item name="bottomToolbar.bg">@color/surface_color</item>
        <item name="bottomToolbar.preview.textColor">?android:textColorPrimary</item>
        <item name="bottomToolbar.apply.textColor">@color/colorAccent</item>
        <item name="preview.bottomToolbar.back.textColor">
            @color/zhihu_preview_bottom_toolbar_back_text
        </item>
        <item name="preview.bottomToolbar.apply.textColor">@color/colorAccent</item>
        <item name="listPopupWindowStyle">@style/PopupStyle</item>
        <item name="capture.textColor">@color/zhihu_capture</item>
    </style>

    <style name="PopupStyle" parent="Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
    </style>

    <style name="AppTheme.Profile" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.VideoPlayer" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorBackground">@android:color/black</item>
    </style>
</resources>
